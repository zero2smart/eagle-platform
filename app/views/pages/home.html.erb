<% @body_class = 'layout-login-centered-boxed home h-100' %>

<div class="layout-login-centered-boxed__form card">

  <div class="d-flex flex-column justify-content-center align-items-center mt-2 mb-5 navbar-light">
    <a href="<%= theme_path(:index) %>" class="navbar-brand flex-column mb-2 align-items-center mr-0" style="min-width: 0">
      <img class="navbar-brand-icon mr-0 mb-2" src="<%= image_path('haul-logo.svg')%>" width="155" alt="Stack">
    </a>
    <p class="m-0">Login to access your Haul Account </p>
  </div>

  <%= flash_messages %>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :defaults => { :input_html => { :class => "form-control form-control-prepended" } }) do |f| %>
    <div class="form-group">
      <label class="text-label" for="email_2">Email Address:</label>
      <div class="input-group input-group-merge">
        <%= f.input_field :email, required: false, autofocus: true, label: false, placeholder: "john@doe.com" %>
        <div class="input-group-prepend">
          <div class="input-group-text">
            <span class="far fa-envelope"></span>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="text-label" for="password_2">Password:</label>
      <div class="input-group input-group-merge">
        <%= f.input_field :password, required: false, label: false, placeholder: "Enter your password" %>
        <div class="input-group-prepend">
          <div class="input-group-text">
            <span class="fa fa-key"></span>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.button :submit, "Log in", class: "btn btn-block btn-primary" %>
    </div>
    <div class="form-group text-center">
      <%= link_to 'Forgot Password?', new_user_password_path %>
    </div>
  <% end %>

</div>

