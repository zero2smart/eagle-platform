<div class="mdk-drawer js-mdk-drawer" id="default-drawer" data-align="start">
  <div class="mdk-drawer__content">
    <div class="sidebar sidebar-light sidebar-left simplebar" data-simplebar>
      <div class="d-flex align-items-center sidebar-p-a border-bottom">
        <a href="#" class="flex d-flex align-items-center text-body text-underline-0">
          <span class="avatar mr-3">
            <img src="<%= image_path('avatar/demi.png')%>" alt="avatar" class="avatar-img rounded-circle">
          </span>
          <span class="flex d-flex flex-column">
            <strong><%= current_user.name %></strong>
            <small class="text-muted text-uppercase">Account Manager</small>
          </span>
        </a>
        <div class="dropdown ml-auto">
          <a href="#" data-toggle="dropdown" data-caret="false" class="text-muted"><i class="material-icons">more_vert</i></a>
         <div class="dropdown-menu dropdown-menu-right">
            <div class="dropdown-item-text dropdown-item-text--lh">
              <div><strong><%= current_user.short_name %></strong></div>
              <div><%= current_user.email %></div>
            </div>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="<%= dashboard_path %>">Dashboard</a>
            <a class="dropdown-item" href="#">My profile</a>
            <a class="dropdown-item" href="<%= dashboard_settings_path %>">Settings</a>
            <div class="dropdown-divider"></div>
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </div>
      </div>

      <div class="sidebar-heading sidebar-m-t">Menu</div>
      <ul class="sidebar-menu">
        <li class="sidebar-menu-item <% if current_page?(root_path) || current_page?(theme_path(:index)) || current_page?(theme_path(:staff)) ||  current_page?(theme_path(:analytics)) %> active open<% end %>">
          <a class="sidebar-menu-button" data-toggle="collapse" href="#dashboards_menu">
            <i class="sidebar-menu-icon sidebar-menu-icon--left material-icons">dvr</i>
            <span class="sidebar-menu-text">Dashboards</span>
            <span class="ml-auto sidebar-menu-toggle-icon"></span>
          </a>
          <ul class="sidebar-submenu collapse <% if current_page?(root_path) || current_page?(theme_path(:index)) || current_page?(theme_path(:staff)) ||  current_page?(theme_path(:analytics)) %> show<% end %>" id="dashboards_menu">
            <li class="sidebar-menu-item <% if current_page?(root_path) || current_page?(theme_path(:index))%>active<% end%>">
              <a class="sidebar-menu-button" href="<%= theme_path(:index) %>">
                <span class="sidebar-menu-text">My Dashboard</span>
              </a>
            </li>
            <li class="sidebar-menu-item <% if current_page?(theme_path(:staff))%>active<% end%>">
              <a class="sidebar-menu-button" href="<%= theme_path(:staff) %>">
                  <span class="sidebar-menu-text">Sales</span>
              </a>
            </li>
            <li class="sidebar-menu-item <% if current_page?(theme_path(:analytics))%>active<% end%>">
              <a class="sidebar-menu-button" href="<%= theme_path(:analytics) %>">
                  <span class="sidebar-menu-text">Dispatch</span>
              </a>
            </li>
          </ul>
        </li>      
      </ul>

      <div class="sidebar-heading">Departments</div>
      <div class="sidebar-block p-0">
        <ul class="sidebar-menu" id="components_menu">
          <li class="sidebar-menu-item <% if current_page?(theme_path(:ui_buttons))%>active<% end%>">
            <a class="sidebar-menu-button" href="<%= theme_path(:ui_buttons) %>">
              <i class="sidebar-menu-icon sidebar-menu-icon--left material-icons">attach_money</i>
              <span class="sidebar-menu-text">Sales</span>
            </a>
          </li>
          <li class="sidebar-menu-item <% if current_page?(theme_path(:ui_alerts))%>active<% end%>">
            <a class="sidebar-menu-button" href="<%= theme_path(:ui_alerts) %>">
              <i class="sidebar-menu-icon sidebar-menu-icon--left material-icons">directions</i>
              <span class="sidebar-menu-text">Dispatch</span>
            </a>
          </li>
          <li class="sidebar-menu-item <% if current_page?(theme_path(:ui_avatars))%>active<% end%>">
            <a class="sidebar-menu-button" href="<%= theme_path(:ui_avatars) %>">
              <i class="sidebar-menu-icon sidebar-menu-icon--left material-icons">inbox</i>
              <span class="sidebar-menu-text">Billing</span>
              <%# <span class="badge badge-primary ml-auto">NEW</span> %>
            </a>
          </li>
        </ul>
      </div>

      <div class="sidebar-heading">Management</div>
      <div class="sidebar-block p-0">
        <ul class="sidebar-menu" id="components_menu">
          <li class="sidebar-menu-item <% if current_page?(theme_path(:ui_buttons))%>active<% end%>">
            <a class="sidebar-menu-button" href="<%= theme_path(:ui_buttons) %>">
              <i class="sidebar-menu-icon sidebar-menu-icon--left material-icons">directions_bus</i>
              <span class="sidebar-menu-text">Trucks</span>
            </a>
          </li>
          <li class="sidebar-menu-item <% if current_page?(theme_path(:ui_alerts))%>active<% end%>">
            <a class="sidebar-menu-button" href="<%= theme_path(:ui_alerts) %>">
              <i class="sidebar-menu-icon sidebar-menu-icon--left material-icons">contacts</i>
              <span class="sidebar-menu-text">Customers</span>
            </a>
          </li>
          <li class="sidebar-menu-item <% if current_page?(theme_path(:ui_avatars))%>active<% end%>">
            <a class="sidebar-menu-button" href="<%= theme_path(:ui_avatars) %>">
              <i class="sidebar-menu-icon sidebar-menu-icon--left material-icons">list</i>
              <span class="sidebar-menu-text">Materials</span>
              <%# <span class="badge badge-primary ml-auto">NEW</span> %>
            </a>
          </li>
          <li class="sidebar-menu-item <% if current_page?(theme_path(:ui_avatars))%>active<% end%>">
            <a class="sidebar-menu-button" href="<%= theme_path(:ui_avatars) %>">
              <i class="sidebar-menu-icon sidebar-menu-icon--left material-icons">map</i>
              <span class="sidebar-menu-text">Locations</span>
              <%# <span class="badge badge-primary ml-auto">NEW</span> %>
            </a>
          </li>
          <li class="sidebar-menu-item <% if current_page?(theme_path(:ui_avatars))%>active<% end%>">
            <a class="sidebar-menu-button" href="<%= theme_path(:ui_avatars) %>">
              <i class="sidebar-menu-icon sidebar-menu-icon--left material-icons">settings</i>
              <span class="sidebar-menu-text">Settings</span>
              <%# <span class="badge badge-primary ml-auto">NEW</span> %>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>